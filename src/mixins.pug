mixin slide(number)
    -
        let nextPage = (number + 1)
    .section(data-anchor = pages[number][0])
        section.slides
            .burger-menu.main-menu
                .main-menu-icon
                .main-menu-header= 'Меню'
                nav.main-menu-block
                    ul.burger-menu-opened.main-menu-opened
                        each val, index in pages
                            if val[2]
                                if val[0] === pages[number][0]
                                    li.burger-menu-opened-item.burger-menu-opened-item-selected.main-menu-opened-item.main-menu-opened-item-selected
                                        a( href = '#' + val[0] )= val[2]
                                else
                                    li.burger-menu-opened-item.main-menu-opened-item
                                        a( href = '#' + val[0] )= val[2]
            .main-menu-icon.mobile-menu-icon
            nav.mobile-menu
                ul.mobile-menu-opened
                    each val, index in pages
                        if val[2]
                            li.mobile-menu-opened-item
                                a( href = '#' + val[0] )= val[2]
            .top-center
                .top-center-dot
                .top-center-text= pages[number][1]
            .phone
                a.phone-number(href="tel:+78121234567")= '+7 (812) 123-45-67'
            .main-logo
            block
            .pages
                .pages-top= '0' + nextPage
                .pages-bottom= '-09'
            .social
                p.social-vk= 'Vk'
                p.social-fb= 'Fb'
                p.social-inst= 'Inst'
            if (number === pages.length - 1)
                a.scroll-down(href='#' + pages[0][0])
                    p.scroll-down-text= 'В начало'
                    .scroll-down-arrow.scroll-down-arrow-up
            else
                a.scroll-down(href='#' + pages[nextPage][0])
                    p.scroll-down-text= pages[nextPage][1]
                    .scroll-down-arrow

mixin slideCourse(number)
    article.slide
        h3.course-header= courses[number][0]
        div.course-description-full
            if courses[number].length === 2
                p.course-description-paragraph= courses[number][1]
            else if courses[number].length > 2
                - for(var i = 1; i < courses[number].length; i++)
                  p.course-description-paragraph= courses[number][i]

mixin slideTrainer(number)
    -
        let buttonTrainerText = "Записаться к "
    article.slide
        div.trainer
            img(src=trainers[number][2]).trainer-image
            div.trainer-text
                h2.trainer-header= trainers[number][0]
                if trainers[number].length === 3
                    p.trainer-description= trainers[number][2]
                else if trainers[number].length > 3
                    - for(var i = 3; i < trainers[number].length; i++)
                      p.trainer-description= trainers[number][i]
                form(action='#try-1')
                    button.button.trainers-button= buttonTrainerText + trainers[number][1]

mixin priceCell(number)
    td.prices-table-td
        div.prices-td-wrapper
            div.prices-header
                p.prices-title= prices[number][0]
                div.prices-price
                    .prices-sum= prices[number][1]
                    .prices-rub= ' руб.'
            a.prices-try(href='#try-1')
                img.plus.prices-plus(src='images/plus.png')

mixin scheduleRow(number)
    tr.schedule-tr
        - for(var i = 0; i < schedule[number].length; i++)
            if(i == 0 && number == 0)
                td.schedule-td
                    //- (href='https://spb.hh.ru/resume/1402d876ff0737d0ee0039ed1f6f5a32386355')
                    a.schedule-td-download
                        img.schedule-td-download-img(src='images/download-arrow.jpg')
                        p.schedule-title= schedule[number][i]
            else
                td.schedule-td
                    p.schedule-title= schedule[number][i]

mixin slideReview(number)
    article.slide
        .review-wrapper
            .review-header
                img.review-photo(src=reviews[number][1])
                .review-person
                    h1.review-name= (reviews[number][0])
                    h2.review-age= (reviews[number][2])
            p.review-text= (reviews[number][3])