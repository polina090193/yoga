mixin slide(number)
    -
        let nextPage = (number + 1)
    .section(data-anchor = pages[number][0])
        section.slides
            .menu
                .menu-icon
                .menu-header= 'Меню'
                nav.menu-block
                    ul.menu-opened
                        each val, index in pages
                            if val[2]
                                if val[0] === pages[number][0]
                                    li.menu-opened-item.menu-opened__item_selected
                                        a( href = '#' + val[0] )= val[2]
                                else
                                    li.menu-opened-item
                                        a( href = '#' + val[0] )= val[2]
            .top-center
                .top-center-dot
                .top-center-text= pages[number][1]
            .phone
                a.phone-number(href="tel:+78121234567")= '+7 (812) 123-45-67'
            .logo-left
            block
            .pages
                .pages-top= '0' + nextPage
                .pages-bottom= '-09'
            .social
                p.social-vk= 'Vk'
                p.social-fb= 'Fb'
                p.social-inst= 'Inst'
            if (number === pages.length - 1)
                a.scroll-down(href='#' + pages[0][0])
                    p.scroll-down-text= 'В начало'
                    .scroll-down-arrow-up
            else
                a.scroll-down(href='#' + pages[nextPage][0])
                    p.scroll-down-text= pages[nextPage][1]
                    .scroll-down-arrow

mixin slideClass(number)
    article.slide
        h3.classes-head= classes[number][0]
        div.classes-descriptions
            if classes[number].length === 2
                p.classes-description= classes[number][1]
            else if classes[number].length > 2
                - for(var i = 1; i < classes[number].length; i++)
                  p.classes-description= classes[number][i]

mixin slideTrainer(number)
    -
        let buttonTrainerWords = "Записаться к "
    article.slide.slide-trainers
        div.trainers-item
            img(src=trainers[number][2]).trainers-image
            div.trainers-text
                h2.trainers-head= trainers[number][0]
                if trainers[number].length === 3
                    p.trainers-description= trainers[number][2]
                else if trainers[number].length > 3
                    - for(var i = 3; i < trainers[number].length; i++)
                      p.trainers-description= trainers[number][i]
                button.button-sign-up= buttonTrainerWords + trainers[number][1]

